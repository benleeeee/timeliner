                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <!-- Dynamic control 1 -->
                                    <TextBlock Grid.Row="0" Text="{Binding name}" />

                                    <!-- Dynamic control 2 -->
                                    <Button Grid.Row="1" Content="{Binding name}" />
                                </Grid>
